<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i_fondoini1"
    tools:context=".registrarOrden">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="399dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgVolIni"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/i_vol2"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:foregroundGravity="center"
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/hola"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"

            android:gravity="center"
            android:text="@string/ingresa"
            android:textColor="@color/griz"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText

            android:id="@+id/nombrePlain"
            android:layout_width="357dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="username"
            android:background="@drawable/card_border"
            android:drawableStart="@drawable/v_person"
            android:drawablePadding="4dp"
            android:hint="@string/nom"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText

            android:id="@+id/desPlain"
            android:layout_width="357dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/card_border"
            android:drawableStart="@drawable/v_solicitud"
            android:drawablePadding="4dp"
            android:hint="@string/desc"
            android:inputType="text"
            android:lines="2"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/areaPlain"
            android:layout_width="357dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_border"
            android:drawableStart="@drawable/v_area_24"
            android:drawablePadding="4dp"
            android:hint="@string/are"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/ubicacionPlain"
            android:layout_width="357dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_border"
            android:drawableStart="@drawable/v_ubicacion_24"
            android:drawablePadding="4dp"
            android:hint="@string/ubi"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            tools:ignore="Autofill" />

        <Button
            android:onClick="insertarDatos"
            android:id="@+id/btnInsert"
            android:layout_width="352dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/lavender_border"
            android:backgroundTint="@color/purple"
            android:text="@string/grd"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="20dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>